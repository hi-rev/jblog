	</settings>
	
	<typeAliases>
		<typeAlias type="com.douzone.jblog.vo.UserVo" alias="uservo"/>
   	</typeAliases>	

	<mappers>
		<!-- sql list  -->
		<mapper resource="mybatis/mappers/user.xml" />
	</mappers>
</configuration>